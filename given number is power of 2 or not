import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
         int n;
        Scanner sc=new Scanner(System.in);
        n=sc.nextInt();
        while(n%2==0){
            n=n/2;
        }
        if(n==1){
            System.out.println("YES");
        }
        else{
            System.out.println("NO");
        }
        
    }
}

